<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_payment_receipt" inherit_id="account.report_payment_receipt">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-call="custom_raices.custom_report_payment_receipt_document" t-lang="lang"/>
                </t>
            </t>
        </xpath>
    </template>

    <template id="custom_report_payment_receipt_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-call="custom_raices.custom_report_payment_detail">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>
                <t t-set="company" t-value="env.company"/>
                <t t-set="usuario" t-value="env.user"/>
                <t t-set="org_dup">ORIGINAL</t>
            </t>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-5">
                    <span>---------------------------------------------------------------------------------</span>
                </div>
                <div class="col-1"></div>
                <div class="col-5">
                    <span>---------------------------------------------------------------------------------</span>
                </div>
            </div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <t t-call="custom_raices.custom_report_payment_detail">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>
                <t t-set="company" t-value="env.company"/>
                <t t-set="usuario" t-value="env.user"/>
                <t t-set="org_dup">DUPLICADO</t>
            </t>
        </t>
    </template>

    <template id="custom_report_payment_detail">
        <div class="row">
            <div class="col-6 text-end">
                <strong t-out="org_dup"/>
            </div>
        </div>
        <div class="mb-4 mt-3">
            <div class="row">
                <div class="col-6" t-if="o.date">
                    <span><![CDATA[Fecha Pago:&nbsp;]]></span>
                    <span t-field="o.date"/>
                </div>
                <div class="text-right" >
                    <h5>
                        <strong><![CDATA[Recibo de Dinero N°:&nbsp;]]></strong>
                        <strong t-field="o.name"/>
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-6" t-if="o.partner_type">
                    <t t-if="o.partner_type == 'customer'"><![CDATA[Cliente:&nbsp;]]></t>
                    <t t-if="o.partner_type == 'supplier'"><![CDATA[Proveedor:&nbsp;]]></t>
                    <span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                </div>
                <div class="col-6" ></div>
            </div>
            <div class="row">
                <div class="col-6" >
                    <span><![CDATA[RUC:&nbsp;]]></span>
                    <span t-field="o.partner_id.vat"/>
                </div>
            </div>
            <t t-set="invoices" t-value="o.reconciled_invoice_ids or o.reconciled_bill_ids"/>
            <t t-foreach="invoices" t-as="inv">
                <t t-if="any(inv.currency_id != par[2].currency_id for par in inv._get_reconciled_invoices_partials()[0])" t-set="otherCurrency" t-value="True"/>
                <t t-if="inv.move_type != 'entry'">
                    <t t-foreach="inv._get_reconciled_invoices_partials()[0]" t-as="par">
                        <t t-set="amount" t-value="par[1]"/>
                        <t t-set="payment" t-value="par[2].move_id"/>
                    </t>
                </t>
            </t>
            <div class="row">
                <div class="col-6" t-if="o.amount and o.amount != 0">
                    <span><![CDATA[Importe de Pago:&nbsp;]]></span>
                    <strong t-out="o.amount if o.amount else amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                </div>
                <div class="col-6" ><![CDATA[Fecha de Deposito:&nbsp;]]></div>
            </div>
            <div class="row">
                <div class="col-10">
                    <strong><![CDATA[Son:&nbsp;]]></strong>
                    <strong t-out="o.currency_id.amount_to_text(o.amount if o.amount else amount)"/>
                </div>
            </div>
            <table class="table table-sm">
                <tbody>
                    <t t-foreach="invoices" t-as="inv">
                        <t t-if="inv.move_type != 'entry'">
                            <tr>
                                <td width="30%" ><![CDATA[Pago Correspondiente a Factura N°]]></td>
                                <td width="20%" class="text-right">
                                    <strong><span t-field="inv.name"/></strong>
                                </td>
                            </tr>
                        </t>
                        <t t-if="inv.amount_residual != 0">
                            <tr>
                                <td><![CDATA[Saldo adeudado:&nbsp;]]></td>
                                <td class="text-right"><strong><span t-field="inv.amount_residual"/></strong></td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <div class="row">
                <div class="col-6">
                    <span><![CDATA[Pago en&nbsp;]]></span>
                    <t t-out="o.journal_id.name if o.journal_id.type != 'cash' else 'Efectivo'"/>
                </div>
                <div class="col-6"></div>
            </div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">
                    <div class="text-right">----------------------------------</div>
                </div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">
                    <div class="text-right">
                        <span><![CDATA[Firma: &nbsp;]]></span>
                        <span t-field="usuario.name">Usuario</span>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>