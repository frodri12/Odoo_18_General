<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_group_form_inherit" model="ir.ui.view">
        <field name="name">account.tax.group.form</field>
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='preceding_subtotal']" position="after">
                <field name="l10n_py_tax_type" invisible="country_code != 'PY'" />
            </xpath>
        </field>
    </record>
</odoo>
