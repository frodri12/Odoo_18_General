<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_l10n_avatar_py_economic_activity_tree" model="ir.ui.view">
        <field name="name">l10n_avatar_py_economic_activity.list</field>
        <field name="model">l10n_avatar_py_economic_activity</field>
        <field name="arch" type="xml">
            <list string="Actividades Económicas" create="0" delete="0">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="view_l10n_avatar_py_economic_activity_search" model="ir.ui.view">
        <field name="name">l10n_avatar_py_economic_activity.search</field>
        <field name="model">l10n_avatar_py_economic_activity</field>
        <field name="arch" type="xml">
            <search string="Actividades Económicas">
                <field name="name"
                    filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
            </search>
        </field>
    </record>

</odoo>