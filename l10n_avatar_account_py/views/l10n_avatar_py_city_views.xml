<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_avatar_py_city_tree" model="ir.ui.view">
        <field name="name">l10n_avatar_py_city.list</field>
        <field name="model">l10n_avatar_py_city</field>
        <field name="arch" type="xml">
            <list string="Ciudades" create="0" delete="0">
                <field name="name" readonly="is_editable_for_group == False"/>
                <field name="code" readonly="is_editable_for_group == False"/>
                <field name="municipality_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
                <field name="state_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
                <field name="country_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
            </list>
        </field>
    </record>

    <record id="view_l10n_avatar_py_city_form" model="ir.ui.view">
        <field name="name">l10n_avatar_py_city.form</field>
        <field name="model">l10n_avatar_py_city</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <div class="oe_button_box" name="button_box"></div>
                    <group name="main_group">
                        <group name="city_details">
                            <field name="name" readonly="is_editable_for_group == False"/>
                            <field name="code" readonly="is_editable_for_group == False"/>
                            <field name="municipality_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
                            <field name="state_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
                            <field name="country_id" options="{'no_create': True, 'no_open': True}" readonly="is_editable_for_group == False"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_l10n_avatar_py_city_search" model="ir.ui.view">
        <field name="name">l10n_avatar_py_city.search</field>
        <field name="model">l10n_avatar_py_city</field>
        <field name="arch" type="xml">
            <search string="Ciudades">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <group string="Group By">
                    <filter name="groupby_municipality" string="Municipios" context="{'group_by': 'municipality_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_l10n_avatar_py_city" model="ir.actions.act_window">
        <field name="name">Ciuades</field>
        <field name="view_id" ref="view_l10n_avatar_py_city_tree"/>
        <field name="res_model">l10n_avatar_py_city</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crear una ciudad</p>
            <p>Las ciudades son parte de la direcciÃ³n de los contactos.</p>
        </field>
    </record>
</odoo>