        <div class="row">
            <div class="col">
                <strong t-att-style="'font-size:0.7rem;color: %s;' % o.company_id.secondary_color"><![CDATA[Nº de
        Comprobante de retención:&nbsp;]]></strong>
                <strong style="font-size:0.7rem"><![CDATA[PENDIENTE]]></strong>
            </div>
        </div>
        -->
    </template>

    <template id="custom_header">
        <div class="mb-3">
            <!-- Linea con el logo y los datos del Timbrado-->
            <div class="row">
                <div name="left-upper-side" class="col-3 text-center">
                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                        style="max-height: 120px;" alt="Logo" />
                </div>
                <div name="center-upper" class="col-5 text-center"
                    t-att-style="'color: %s;' % o.company_id.primary_color">
                    <!--<span
                    style="display: inline-block; text-align: center; line-height: 8px;"> </span>-->
                    <span t-field="o.company_id.partner_id.name"
                        t-att-style="'font-size:1.2rem;color: %s;' % o.company_id.primary_color" />
                    <br />
                    <t
                        t-out="' - '.join([item for item in [
                            ', '.join([item for item in [header_address.street, header_address.street2] if item]),
                            header_address.city,
                            header_address.state_id and header_address.state_id.name,
                            header_address.zip,
                            header_address.country_id and header_address.country_id.name] if item])" />
                    <span t-if="header_address.phone"> - </span>
                    <span t-if="header_address.phone" style="white-space: nowrap;"
                        t-out="'Tel: ' + header_address.phone" />
                    <br/>
                    <t t-set="actecos" t-value="o._get_sifen_gActEco()" />
                    <t t-foreach="actecos" t-as="acteco">
                        <span><![CDATA[-&nbsp;]]></span>
                        <span t-out="acteco.get('dDesActEco')"/>
                        <span><![CDATA[&nbsp;]]></span>
                    </t>

                </div>
                <div name="right-upper-side" class="col-4" style="padding-left: 0px;">
                    <span t-att-style="'color: %s;' % o.company_id.secondary_color"><![CDATA[RUC:&nbsp;]]></span>
                    <span t-out="ruc_number" />
                    <br />
                    <span t-att-style="'color: %s;' % o.company_id.secondary_color"><![CDATA[Timbrado N°:&nbsp;]]></span>
                    <span t-out="ruc_auth" />
                    <t t-if="ruc_serie">
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color"><![CDATA[&nbsp;Serie:&nbsp;]]></span>
                        <span t-out="ruc_serie" />
                    </t>
                    <br />
                    <span t-att-style="'color: %s;' % o.company_id.secondary_color"><![CDATA[Fecha inicio de vigencia:&nbsp;]]></span>
                    <span t-out="ruc_auth_startdate" t-options="{'widget':'date'}" />
                    <br />
                    <t t-if="ruc_auth_enddate">
                        <span t-att-style="'color: %s;' % o.company_id.secondary_color"><![CDATA[Fecha fin de vigencia:&nbsp;]]></span>
                        <span t-out="ruc_auth_enddate" t-options="{'widget':'date'}" />
                    </t>
                    <br />
                    <h5 class="text-center" t-att-style="'color: %s;' % o.company_id.primary_color">
                        <strong>
                            <span t-att-style="'font-size:1rem'" t-out="report_name" />
                            <br />
                            <span t-out="report_number" />
                        </strong>
                    </h5>
                </div>
            </div>
        </div>
    </template>
</odoo>