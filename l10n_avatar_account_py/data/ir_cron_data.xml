<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="ir_cron_update_pac_status_invoice" model="ir.cron">
            <field name="name">Automatic update of state on the DNIT (for invoices)</field>
            <field name="model_id" ref="l10n_avatar_account_py.model_l10n_avatar_py_account_edi"/>
            <field name="state">code</field>
            <field name="code">model.fetch_and_update_dnit_status()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:00:00')"/>
        </record>
     </data>
</odoo>